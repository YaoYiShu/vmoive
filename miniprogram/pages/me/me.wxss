/* pages/me/me.wxss */

.me {
  width: 100%;
  height: 100vh;
  background-color: #121212;
}

.me .bg {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 250px;
  background-position: 50%;
  background-size: cover;
  flex-flow: column;
}

.me .bg .avator {
  height:94px;
  width:94px;
  /* 同时加才能圆角 */
  border-radius: 50%;
  overflow:hidden
}

.me .line {
  background: #121212;
  height: 40px;
  border-top: 1px solid rgba(211, 210, 210, 0.1);
}

.me .line-2 {
  background: #121212;
  height: 30px;
}

.me .item {
  position: relative;
  display: flex;
  align-items: center;
  background: #1d1d1d;
  padding: 5px 15px;
  border-top: 1px solid rgba(211, 210, 210, 0.1);
}

.me .item::after {
  position: absolute;
  right: 10px;
  content: '';
  width: 20px;
  height: 20px;
  display: inline-block;
  background:url(data:image/png;base64,) no-repeat;
  background-position: 50%;
  background-size: 50%;
}

.me .item .icon {
  width: 25px;
  height: 25px;
  padding-right: 10px;
}

