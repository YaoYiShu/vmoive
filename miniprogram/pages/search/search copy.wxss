/* pages/search/search.wxss */
.search {
  width: 100%;
  height: 100vh;
  background: #1a1a1a;
}

.search .search-box {
  display: flex;
  height: 40px;
  width: 100%;
  padding: 0 0 0 15px;
  box-sizing: border-box;
}

.search .search-box .sm-box {
  flex: 1;
  display: flex;
  background-color: #252525;
  border-radius: 4px;
}

.search .search-box .sm-box .van-icon {
  height: 40px;
  width: 40px;
  line-height: 40px;
  text-align: center;
  font-size: 20px;
  color: #888;
}

.search .search-box input {
  display: flex;
  flex: 1;
  height: 40px;
  caret-color:blue;
  color: #fff;
}
.search .search-box .van-button {
  padding: 0;
  margin: 0;
  height: 40px;
  color: #999;
  background: transparent;
  width: 70px;
  border: none;
  font-size: 18px;
  font-weight: normal;
}

/* components/search-history/search-history.wxss */

.search .title {
  font-size: 18px;
  padding: 40px 0 20px 15px;
  color: #888;
}

.search .keyword {
  padding: 0 15px;
}

.search .keyword .kw {
  display: inline-block;
  color: #ffffff;
  padding: 10px 10px;
  margin: 10px 15px 5px 0;
  background-color: #252525;
  border-radius: 2px;
}

.search .history .title .clear {
  display: flex;
  align-items: center;
  float: right;
  margin-right: 40px;
}

.search .history .title .clear .icon{
  width: 1em;
  height: 1em;
}

.van-dialog__message-text {
  font-size: 16px;
}

.van-dialog__button {
  width: 50%;
}








