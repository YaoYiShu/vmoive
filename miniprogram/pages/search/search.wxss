/* pages/search/search.wxss */
.search {
  width: 100%;
  height: 100vh;
  background: #1a1a1a;
}

.search .search-box {
  display: flex;
  height: 50px;
  width: 100%;
  padding: 10px 0 0 15px;
  box-sizing: border-box;
  /* 测试 */
  position: fixed;
  z-index: 10;
  background-color: #1a1a1a;
}

.search .search-box .sm-box {
  flex: 1;
  display: flex;
  background-color: #252525;
  border-radius: 4px;
}

.search .search-box .sm-box .van-icon {
  height: 40px;
  width: 40px;
  line-height: 40px;
  text-align: center;
  font-size: 20px;
  color: #888;
}

.search .search-box input {
  display: flex;
  flex: 1;
  height: 40px;
  caret-color: blue;
  color: #fff;
}

.search .search-box .van-button {
  padding: 0;
  margin: 0;
  height: 40px;
  color: #999;
  background: transparent;
  width: 70px;
  border: none;
  font-size: 18px;
  font-weight: normal;
}

/* vant样式修改 */
.van-dialog__message-text {
  font-size: 16px;
}
.van-dialog__message {
  background-color: #fff;
}

.van-dialog__button {
  width: 50%;
}

.van-dropdown-menu {
  border-bottom: 1px solid rgb(32, 32, 32);
  box-shadow: none !important;
}

.van-top-enter-active,
.van-popup--top,
.van-popup--safe {
  padding-bottom: 15px;
  background-color: #1a1a1a !important;
}

/* .van-transition {
  background-color: #1a1a1a !important;
} */

.van-dropdown-menu__item {
  background-color: #1a1a1a;
}

.van-ellipsis {
  font-size: 16px;
  color: #999;
}

.van-ellipsis:active {
  color: #fff;
}

.van-dropdown-item__title {
  color: #fff;
}

.van-cell.van-cell--clickable {
  background-color: #1a1a1a;
}

