/* components/my-video-list/my-video-list.wxss */
.video-list {
  width: 100%;
  height: 100vh;
}

.box {
  width: 100%;
  padding: 10px;
  display: flex;
  box-sizing: border-box;
}

.box .thumb image{
  width: 150px;
  height: 90px;
  vertical-align: middle;
}

.box .content {
  /* flex: 1; */
  position: relative;
  width: 100%;
  height: 90px;
  box-sizing: border-box;
  padding: 5px 20px 0 15px;
}

.box .content .count {
  display: flex;
  position: absolute;
  bottom: 10px;
  font-size: 12px;
  margin-top: 20px;
  align-items: center;
  color: #838383;
}

.box .content .count .share {
  display: flex;
  align-items: center;
}

.box .content .count .share image {
  width: 1.3em;
  height: 1.3em;
  margin-left: 30px;
  margin-right: 5px;
}