/* components/play-relate-video/play-relate-video.wxss */

.scroll-bigbox {
  padding-bottom: 25px;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}

.scroll-box {
  width: 100%;
  white-space: nowrap;
}

.scroll-box .tag {
  position: relative;
  display: flex;
  align-items: center;
  width: 100%;
  padding: 20px 0px 6px 10px;
}

.scroll-box .tag .name {
  font-weight: 600;
  font-size: 12px;
  transform: scale(0.8);
  transform-origin: left;
  -moz-transform-origin: left;
}

.scroll-box .tag .more {
  position: absolute;
  display: inline-block;
  right: 10px;
  padding-right: 10px;
  font-size: 12px;
  transform: scale(0.8);
  transform-origin: right;
}

.scroll-view-item_H{
  display: inline-block;
  width: 114px;
  height: 70px;
  padding-left: 10px;
}
.scroll-view-item_H:last-of-type {
  padding-right: 10px;
}
.scroll-view-item_H image {
  width: 100%;
  height: 100%;
  position: relative;
  /* z-index: -1; */
}
.scroll-view-item_H .title {
  width: 110%;
  display: inline-block;
  z-index: 10;
  position: absolute;
  bottom: 5px;
  left: 0px;
  color: #fff;
  font-size: 12px;
  transform: scale(0.8);
  transform-origin: left;
  text-overflow:ellipsis; 
  white-space:nowrap; 
  padding-left: 10px;
  overflow:hidden; 
}

.scroll-view-item_H .duration {
  transform: scale(0.8);
  transform-origin: left;
}
