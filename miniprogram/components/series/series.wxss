/* components/series/series.wxss */

.series .serie {
  position: relative;
  width: 100%;
}

.series .serie .imgBox {
  height: 207px;
  overflow: hidden;
}

.series .serie .title {
  font-size: 20px;
  font-family: Microsoft YaHei;
  /* font-weight: 600; */
}

.series .serie .desc {
  padding: 0 15px;
}

.series .serie .desc .title {
  padding-top: 10px;
}

.series .serie .desc .part {
  font-size: 12px;
  transform: scale(0.9);
  transform-origin: left;
  color: #999;
  padding: 5px 0 20px 0;
}

.series .serie .desc .content {
  font-size: 14px;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:2;
  margin-bottom: 40px;
}

.series .end {
  width: 100%;
  font-size: 14px;
  text-align: center;
  color: #666;
  padding-bottom: 10px;
}